<h1>Todo Lists</h1>

<% @todo_lists.each do |todo_list| %>
  <div class="todo_list">
    <span>
      
      <%= "#{todo_list.list_due_date} - " %>
    
    <%= link_to "#{todo_list.list_name}", todo_list, class: "todo_list_link" %>
    </span>
  </div>
<% end %>
<p />
<%= will_paginate @todo_lists %>
<p />

<%= link_to 'New Todo List', new_todo_list_path %>
